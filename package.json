{
  "name": "codecollabproj",
  "version": "1.0.0",
  "description": "Computer Club Collaboration Platform",
  "scripts": {
    "start": "cd server && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run start:tsx",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "concurrently \"cd server && npm test\" \"cd client && npm test\"",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:critical": "npx playwright test --config=playwright.critical.config.ts",
    "test:e2e:security": "npx playwright test cookie-auth-security",
    "typecheck": "concurrently \"cd server && npm run typecheck\" \"cd client && npm run typecheck\"",
    "lint": "concurrently \"cd server && npm run lint\" \"cd client && npm run lint\"",
    "lint:fix": "concurrently \"cd server && npm run lint:fix\" \"cd client && npm run lint:fix\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "railway:backend": "cd server && npm start",
    "railway:frontend": "cd client && npm run build && npx serve -s build -l 3000"
  },
  "keywords": [
    "collaboration",
    "computer-club",
    "projects"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "nodemailer": "^8.0.1",
    "nodemon": "^3.1.11"
  },
  "lint-staged": {
    "client/src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "server/**/*.{ts,js}": [
      "prettier --write"
    ],
    "tests/**/*.{ts,js}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "lodash": "^4.17.23"
  }
}
